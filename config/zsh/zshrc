function configure { source ~/.config/zsh/$1.zsh }

configure environment

if [[ ! -v WARP_IS_LOCAL_SHELL_SESSION ]] {
  # We don't need these in Warp, coz it has its own equivalents.
  configure prompt
  configure vi_mode
  configure completion
  configure history
}

configure aliases
configure homebrew
configure asdf
configure work

unfunction configure
