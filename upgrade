#!/bin/bash

set -o errexit

green="\033[32m"
reset="\033[0;39m"

function echo_green {
  echo -e "${green}${1}${reset}"
}

echo_green "Upgrading homebrew packages..."
brew upgrade

echo
echo_green "Upgrading mise tools..."
mise up

echo
echo_green "Upgrading Neovim plugins..."
nvim --headless "+Lazy! sync" +qa

echo
echo_green "Upgrade complete."
